---
layout: base.njk
---

<article class="blog-post">
    <div class="container" style="max-width: 900px; padding-top: 3rem;">
        {% if image %}
        <img src="{{ image }}" alt="{{ title }}" class="post-hero-image">
        {% endif %}
        
        <div class="post-header">
            <span class="article-category">{{ category }}</span>
            <h1 class="post-title">{{ title }}</h1>
            <div class="post-meta">
                <span>üìÖ {{ date | readableDate }}</span>
                <span>‚úçÔ∏è {{ author or 'Redazione Tamburello360' }}</span>
                {% if reading_time %}
                <span>‚è±Ô∏è {{ reading_time }} min di lettura</span>
                {% endif %}
            </div>
        </div>

        <div class="post-content">
            {{ content | safe }}
        </div>

        <div class="post-footer">
            <a href="/blog/" class="back-link">‚Üê Torna al blog</a>
        </div>
    </div>
</article>

<style>
.post-hero-image {
    width: 100%;
    max-height: 500px;
    object-fit: cover;
    border-radius: 15px;
    margin-bottom: 2rem;
}

.post-header {
    margin-bottom: 3rem;
    text-align: center;
}

.post-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 3.5rem;
    color: var(--secondary);
    margin: 1rem 0;
    line-height: 1.2;
}

.post-meta {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    font-size: 0.95rem;
    color: #666;
    flex-wrap: wrap;
}

.post-content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text);
}

.post-content h2 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2rem;
    color: var(--secondary);
    margin-top: 2rem;
    margin-bottom: 1rem;
}

.post-content h3 {
    font-size: 1.5rem;
    color: var(--primary);
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
}

.post-content p {
    margin-bottom: 1.5rem;
}

.post-content ul, .post-content ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
}

.post-content li {
    margin-bottom: 0.5rem;
}

.post-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 2px solid #f0f0f0;
}

.back-link {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--secondary);
    color: white;
    text-decoration: none;
    border-radius: 25px;
    font-weight: 600;
    transition: all 0.3s ease;
}

.back-link:hover {
    background: var(--primary);
    transform: translateX(-5px);
}
</style>
